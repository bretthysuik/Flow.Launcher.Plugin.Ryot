<UserControl x:Class="Flow.Launcher.Plugin.Ryot.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Flow.Launcher.Plugin.Ryot"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="70,14,0,14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="8" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" FontSize="14" Text="Base URL"/>
        <TextBox Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" FontSize="14" Text="{Binding BaseUrl}"/>

        <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" FontSize="14" Text="API Token"/>
        <TextBox Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" FontSize="14" Text="{Binding ApiToken}"/>
    </Grid>
</UserControl>
